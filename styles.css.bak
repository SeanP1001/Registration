body {
  font-family: Arial, sans-serif;
  background-color: #f0f0f0;
  margin: 0;
  padding: 20px;
}

h2 {
  color: #333;
}

form {
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  max-width: 600px; /* Adjust max-width as needed */
  margin: 0 auto; /* Center the form */
}

.row {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15px;
}

.col {
  flex: 1;
  margin-right: 10px;
}

.col:last-child {
  margin-right: 0;
}

label {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
}

input[type="text"], input[type="email"], select, textarea, input[type="number"], input[type="radio"] {
  width: calc(100% - 22px); /* padding and border */
  padding: 8px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

input[type="submit"] {
  background-color: #007bff;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[type="submit"]:hover {
  background-color: #0056b3;
}

.row:last-child {
  justify-content: flex-end;
}

input[type="submit"] {
  background-color: #007bff;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

/* spacing and alignment */
.row {
  margin-bottom: 20px;
}

.col {
  margin-right: 10px;
}

.col:last-child {
  margin-right: 0;
}

/* Styling for error messages */
input:invalid {
  border-color: #ff3333;
}

input:invalid:focus {
  border-color: #ff3333;
  box-shadow: 0 0 5px #ff3333;
}